@import 'colors.styl';

.global-font
  font-size: 2rem
  color: $positives

.modalSize
  width: 65vw
  max-width: 80vw !important

.modalQrSize
  width: 25vw
  max-width: 80vw !important

.text-wrap
  width: 500px !important
  overflow-wrap: break-all
  color: green

.one-line
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  max-width: 100%
  overflow: hidden
  -webkit-line-clamp: 1
  -webkit-box-orient: vertical
  height: auto

.icon-btn
  transition: all 0.3s
  max-width: 400px

.icon-btn:hover
  transform: scale(1.3)
  cursor: pointer

.no-padding
  padding: 0px !important

.q-item
  min-height: 0px

.animated-item
  transition: all 0.3s

.animated-item:hover
  transform: scale(1.02)
  cursor: pointer
  background: rgba(0,0,0,.01)

.q-tab-panels
  background: inherit !important
