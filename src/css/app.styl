@import 'colors.styl';
@import 'sizes.styl';
@import 'typos.styl';
@import 'blockly.styl';
@import 'overwrite.styl';

.btn
  &--rounded
    border-radius: 0.5rem

.global-font
  font-size: 2rem
  color: $positives

.modalSize
  width: 65vw
  max-width: 80vw !important

.modalQrSize
  width: 25vw
  max-width: 80vw !important

.text-wrap
  width: 500px !important
  overflow-wrap: break-all
  color: green

.one-line
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  max-width: 100%
  overflow: hidden
  -webkit-line-clamp: 1
  -webkit-box-orient: vertical
  height: auto

.two-lines
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  max-width: 100%
  overflow: hidden
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical
  height: auto

.icon-btn
  transition: all 0.3s
  max-width: 400px

.icon-btn:hover
  transform: scale(1.3)
  cursor: pointer

.no-padding
  padding: 0px
.q-item
  min-height: 0px

.animated-item
  transition: all 0.3s

.animated-item:hover
  transform: scale(1.02)
  cursor: pointer
  background: rgba(0,0,0,0.01)

.q-tab-panels
  background: inherit !important

.bg-inherit
  background: inherit !important

.q-page-sticky
  z-index: 1

.mac-modal
  z-index: 10000 !important

.btn-lg
  width: 100%
  padding: 0.5rem 1rem
.btn-md
  width: 50%
  padding: 0.5rem 1rem
.active-tab
  color: $white !important
  background: $secondary !important
  font-weight: bold !important

.actionsCard
  position: sticky
  top: 130px

.link
  text-decoration: underline
  color: blue
  cursor: pointer

.text-overline
  letter-spacing: 0.05em

.height-fit-content
  height: fit-content

.q-field--with-bottom
  padding: none

@media (max-width: 800px)
  .modalSize
    width: 90vw
    max-width: 90vw !important

  .modalQrSize
    width: 50vw
    max-width: 80vw !important

  .animated-item:hover
    transform: scale(1.01)